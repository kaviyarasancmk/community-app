{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "strict": true,
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.svelte"],
    "exclude": ["node_modules"]
  }
  