{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@": ["./src"],
            "@/*": ["./src/*"]
        },
        "target": "ES2020",
        "module": "ESNext",
        "strict": true,
        "ignoreDeprecations": "5.0",
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte",
        ".routify/**.js"
    ],
    "exclude": ["node_modules/*", "public/*"]
}
