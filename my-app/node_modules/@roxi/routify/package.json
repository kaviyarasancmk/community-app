{
    "name": "@roxi/routify",
    "version": "3.0.0-next.142",
    "main": "lib/runtime/index.js",
    "module": "lib/runtime/index.js",
    "svelte": "lib/runtime/index.js",
    "type": "module",
    "types": "index.d.ts",
    "typesVersions": {
        "*": {
            "vite-plugin": [
                "./lib/extra/vite-plugin/vite-plugin.d.ts"
            ],
            "tools": [
                "./typings/lib/extra/tools/ssr.d.ts"
            ]
        }
    },
    "bin": {
        "routify": "./lib/cli/index.js",
        "routify3": "./lib/cli/index.js"
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "index.d.ts",
            "default": "./lib/runtime/index.js"
        },
        "./vite-plugin": "./lib/extra/vite-plugin/vite-plugin.js",
        "./lib/extra/vite-plugin": "./lib/extra/vite-plugin/vite-plugin.js",
        "./lib/*": "./lib/*",
        "./lib/cmp/*": "./lib/cmp/*.js",
        "./typings/*": "./typings/*",
        "./plugins/*": "./plugins/*",
        "./tools": "./lib/extra/tools/index.js"
    },
    "scripts": {
        "build": "run-s build:*",
        "build:lint": "npm run util:prettier -- --write",
        "build:documentation": "documentation readme types/typedef.js -f md --section API",
        "build:typings": "tsc ",
        "test": "run-s test:*",
        "test:types": "tsc --noEmit --emitDeclarationOnly false",
        "test:probs": "probs test,lib",
        "test-bak:jest": "jest . --detectOpenHandles",
        "test:lint": "npm run util:prettier -- --check",
        "util:prettier": "prettier -c --plugin-search-dir=. \"{common,lib,plugins,test}/**/*.{js,svelte}\" --ignore-path .gitignore",
        "semantic-release": "semantic-release"
    },
    "author": "jakobrosenberg@gmail.com",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^23.0.2",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "documentation": "^13.2.5",
        "esm-loader-svelte": "^1.0.6",
        "fkill": "^7.2.1",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.28.1",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.5.1",
        "probs": "^1.3.3",
        "rollup": "^3.3.0",
        "rollup-plugin-svelte": "^7.1.0",
        "semantic-release": "^17.4.7",
        "spank": "^2.0.0-13",
        "spassr": "^2.6.0",
        "svelte-esm-loader": "^0.0.3",
        "tree-kill": "^1.2.2",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "cachewrap": "^0.0.1",
        "cheap-watch": "^1.0.4",
        "cheerio": "^1.0.0-rc.10",
        "commander": "^7.2.0",
        "configent": "^3.0.0-13",
        "consolite": "^0.2.10",
        "fs-extra": "^10.0.0",
        "hookar": "^0.0.7-0",
        "kleur": "^4.1.4",
        "persistable": "^0.1.2",
        "prompts": "^2.4.2",
        "svelte": "^3.46.1"
    },
    "peerDependencies": {
        "spank": "^2.0.0-13",
        "vite": "^3.2.4 || ^4.0.0"
    },
    "peerDependenciesMeta": {
        "vite": {
            "optional": true
        },
        "spank": {
            "optional": true
        }
    },
    "prettier": {
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 90,
        "svelteSortOrder": "options-scripts-markup-styles",
        "svelteAllowShorthand": true,
        "svelteBracketNewLine": false,
        "svelteIndentScriptAndStyle": true
    },
    "volta": {
        "node": "19.1.0"
    }
}
